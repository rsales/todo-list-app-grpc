<h1>Todo List</h1>

<%= link_to 'New Task', new_task_path, class: 'btn btn-primary mb-3' %>

<% if @tasks.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Completed</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.completed ? 'Yes' : 'No' %></td>
          <td>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary btn-sm' %>
            <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No tasks found.</p>
<% end %>